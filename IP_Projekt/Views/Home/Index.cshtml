@using IP_Projekt.Views.Home.ViewModels
@model LogowanieViewModel

<style>
.przycisk {
  background-color: #28F7B2; /* Green */
  border: none;
  color: white;
  padding: 12px 30px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
}


</style>

@{
    ViewData["Title"] = "Logowanie";
}

<h1>Zaloguj się</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" asp-action="Login" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email">Adres Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Hasło</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                </div>

            </div>
            <button type="submit" class="przycisk">Zaloguj się</button>
        </form>

    </div>
</div>


<input type = "button" class = "przycisk" value= "Nie masz konta? Zarejestruj się!" onclick="location.href='@Url.Action("Rejestracja", "Home")'" />

