
@model IP_Projekt.DB.Models.Badania

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj zadanie</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Pacjent" class="control-label"></label>
                <input asp-for="Pacjent" class="form-control" />
                <span asp-validation-for="Pacjent" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Lekarz" class="control-label"></label>
                <input asp-for="Lekarz" class="form-control" />
                <span asp-validation-for="Lekarz" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Godzina" class="control-label"></label>
                <input asp-for="Godzina" class="form-control" />
                <span asp-validation-for="Godzina" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <input asp-for="Sala" class="form-control" />
                <span asp-validation-for="Sala" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do listy badań</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}