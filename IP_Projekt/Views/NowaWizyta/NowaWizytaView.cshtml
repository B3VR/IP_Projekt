        <div class="card-header">
            <h3>Nowa Wizyta</h3>
        </div>
        <div class="card-body">
            @*<div class="row w-75 m-1">
                @Html.DropDownListFor(m => m.rodzajPoradni, new SelectList(Enum.GetValues(typeof(RodzajPoradniEnum))), "Wybierz poradnie", new { @class = "form-control dropdown"})
